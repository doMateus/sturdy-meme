{
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "paths": {
      "@*": ["modules/*"],
      "@config/*": ["config/*"],
      "@database/*": ["database/*"],
      "@shared/*": ["shared/*"],
      "@providers/*": ["providers/*"]
    },
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "lib": ["es2015"],
  "include": ["**/*.ts"]
}
